{% extends 'base.html.twig' %}

{% block title %}Modifier le statut de la tâche{% endblock %}

{% block body %}
<div class="container mt-5">
    <h3 class="text-center">Modifier le statut de la tâche : {{ tache.libelle }}</h3>
    <div class="card">
        <div class="card-body">
            <form method="post" action="{{ path('app_tache_change_status', {'id': tache.id}) }}">
                <div class="form-group">
                    <label for="statut">Statut</label>
                    <select name="statut" id="statut" class="form-control">
                        <option value="En cours" {% if tache.statut == 'En cours' %}selected{% endif %}>En cours</option>
                        <option value="En retard" {% if tache.statut == 'En retard' %}selected{% endif %}>En retard</option>
                        <option value="Terminée" {% if tache.statut == 'Terminée' %}selected{% endif %}>Terminée</option>
                    </select>
                </div>
                <input type="hidden" name="_token" value="{{ csrf_token('change_status' ~ tache.id) }}">
                <button type="submit" class="btn btn-primary mt-3">Modifier le statut</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
