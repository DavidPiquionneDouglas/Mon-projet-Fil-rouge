{% extends 'base.html.twig' %}

{% block title %}Tableau des tâches{% endblock %}

{% block body %}
<div class="container mt-5">
    <h3 class="mb-4 text-center">Tableau des tâches</h3>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow border-0 p-3 text-center">
                <p class="fw-bold">Tâches: En cours</p>
                <hr>
                <h2 class="text-primary">{{ stats.en_cours }}</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-0 p-3 text-center">
                <p class="fw-bold">Tâches: En retards</p>
                <hr>
                <h2 class="text-danger">{{ stats.en_retard }}</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-0 p-3 text-center">
                <p class="fw-bold">Tâches: Terminées</p>
                <hr>
                <h2 class="text-success">{{ stats.terminee }}</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-0 p-3 text-center">
                <p class="fw-bold">Tâches: Total</p>
                <hr>
                <h2 class="text-secondary">{{ stats.total }}</h2>
            </div>
        </div>
    </div>

    <div class="card shadow border-0 p-4 mt-4">
        <h3 class="mb-3 text-center">Tâches Récentes</h3>
        {% if taches is not empty %}
            {% for tache in taches %}
            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                <div>
                    <span class="badge {% if tache.statut == 'En cours' %}bg-primary{% elseif tache.statut == 'En retard' %}bg-danger{% elseif tache.statut == 'Terminée' %}bg-success{% else %}bg-secondary{% endif %} me-2">
                        {{ tache.statut }}
                    </span>
                    {{ tache.libelle }}
                </div>
                <div>
                    <span class="text-muted me-2"><i class="bi bi-person"></i>
                        {% if tache.assignedUser %}
                            {{ tache.assignedUser.email }}
                        {% else %}
                            <span class="text-danger">Non assignée</span>
                        {% endif %}
                    </span>
                    <span class="text-muted me-2"><i class="bi bi-watch"></i> 
                        {{ tache.beginDate ? tache.beginDate|date('d/m/Y H:i') : 'Non définie' }}
                    </span>

                    <form method="post" action="{{ path('app_tache_update_status', {'id': tache.id}) }}" class="d-inline">
                        <select name="statut" class="form-select d-inline w-auto" onchange="this.form.submit()">
                            <option value="En cours" {% if tache.statut == 'En cours' %}selected{% endif %}>En cours</option>
                            <option value="En retard" {% if tache.statut == 'En retard' %}selected{% endif %}>En retard</option>
                            <option value="Terminée" {% if tache.statut == 'Terminée' %}selected{% endif %}>Terminée</option>
                        </select>
                        <input type="hidden" name="_token" value="{{ csrf_token('update_status' ~ tache.id) }}">
                    </form>

                    <div class="dropdown d-inline">
                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_tache_edit', {'id': tache.id}) }}">Modifier</a></li>
                            <li>
                                <form method="post" action="{{ path('app_tache_delete', {'id': tache.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
                                    <button class="dropdown-item text-danger" type="submit">Supprimer</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        {% else %}
            <p class="text-center text-muted">Aucune tâche récente</p>
        {% endif %}
    </div>

    </div>
</div>

{% endblock %}
