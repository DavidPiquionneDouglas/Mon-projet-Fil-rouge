{% extends 'base.html.twig' %}

{% block title %}Créer une Tâche{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-dark text-white text-center">
                    <h3><i class="fas fa-tasks"></i> Nouvelle Tâche</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

                    <div class="mb-3">
                        <label class="form-label"><i class="fas fa-tag"></i> Libellé</label>
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la tâche'}}) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><i class="fas fa-barcode"></i> Code</label>
                        {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder': 'Code unique'}}) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><i class="fas fa-align-left"></i> Description</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Décris ta tâche...'}}) }}
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label"><i class="fas fa-calendar-alt"></i> Date de début</label>
                            {{ form_widget(form.beginDate, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"><i class="fas fa-calendar-check"></i> Date de fin</label>
                            {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"><i class="fas fa-clock"></i> Date estimée</label>
                            {{ form_widget(form.estimateEndDate, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-check mt-3">
                        {{ form_widget(form.isFinished, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label"><i class="fas fa-check-circle"></i> Terminée</label>
                    </div>

                    <div class="form-check">
                        {{ form_widget(form.isSuccess, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label"><i class="fas fa-star"></i> Succès</label>
                    </div>

                    <div class="mb-3 mt-3">
                        <label class="form-label"><i class="fas fa-user"></i> Assignée à</label>
                        {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                    </div>

                    <button type="submit" class="btn btn-dark w-100">
                        <i class="fas fa-save"></i> Enregistrer la tâche
                    </button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
