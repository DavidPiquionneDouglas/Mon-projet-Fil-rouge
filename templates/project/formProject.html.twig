{% extends 'base.html.twig' %}

{% block title %}Gérer un projet{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h2>{{ project.id is defined ? 'Modifier' : 'Créer' }} un Projet</h2>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.libelle, 'Nom du projet', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.libelle) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.code, 'Code', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.code) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.beginDate, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.beginDate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.beginDate) }}
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.endDate, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endDate) }}
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.estimateEnddate, 'Estimation', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.estimateEnddate, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.estimateEnddate) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.cost, 'Coût (€)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.cost, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.cost) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                {{ form_widget(form.isFinished, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isFinished, 'Projet terminé', {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                                {{ form_errors(form.isFinished) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                {{ form_widget(form.isSuccess, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.isSuccess, 'Projet réussi', {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                                {{ form_errors(form.isSuccess) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.user, 'Participants', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.user) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('chef_projet_dashboard') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-check-label {
        font-size: 1rem;
    }

    .btn {
        transition: 0.3s;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
{% endblock %}

