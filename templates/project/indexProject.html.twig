{% extends 'base.html.twig' %}

{% block title %}Liste des Projets{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Liste des Projets</h2>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Projets en cours</h5>
                    <p class="card-text display-6">{{ stats.en_cours }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Projets en retard</h5>
                    <p class="card-text display-6">{{ stats.en_retard }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Projets terminés</h5>
                    <p class="card-text display-6">{{ stats.terminee }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Projets</h5>
                    <p class="card-text display-6">{{ stats.total }}</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Liste des projets récents -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <h2 class="mb-0">Projets Récents</h2>
        </div>
        <div class="card-body p-0">
            {% if projects is not empty %}
                <table class="table mb-0 table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Libellé</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for project in projects %}
                        <tr>
                            <td>{{ project.id }}</td>
                            <td>{{ project.libelle }}</td>
                            <td>{{ project.code }}</td>
                            <td>{{ project.description }}</td>
                            <td>
                                <form method="get" action="{{ path('app_project_show', {'id': project.id}) }}" style="display:inline;">
                                    <button class="btn btn-sm btn-warning" type="submit">Editer</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-center text-muted p-3">Aucun projet trouvé.</p>
            {% endif %}
        </div>
    </div>
    
</div>
{% endblock %}
