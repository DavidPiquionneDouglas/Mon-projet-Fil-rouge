{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
<div class="container mt-5">
    <h3 class="mb-4 text-center">Projets</h3>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow border-0 p-3 text-center">
                <p class="fw-bold">Projets en cours</p>
                <hr>
                <h2 class="text-primary">{{ projects|length }}</h2>
            </div>
        </div>
    </div>

    <div class="card shadow border-0 p-4 mt-4">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Estimation de fin</th>
                    <th>Statut</th>
                    <th>Coût</th>
                    <th>Succès</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                <tr>
                    <td>{{ project.id }}</td>
                    <td>{{ project.libelle }}</td>
                    <td>{{ project.code }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.beginDate ? project.beginDate|date('d-m-Y') : '-' }}</td>
                    <td>{{ project.endDate ? project.endDate|date('d-m-Y') : '-' }}</td>
                    <td>{{ project.estimateEnddate ? project.estimateEnddate|date('d-m-Y') : '-' }}</td>
                    <td>
                        <span class="badge {{ project.isFinished ? 'bg-success' : 'bg-warning' }}">
                            {{ project.isFinished ? 'Terminé' : 'En cours' }}
                        </span>
                    </td>
                    <td>{{ project.cost }} €</td>
                    <td>
                        <span class="badge {{ project.isSuccess ? 'bg-success' : 'bg-danger' }}">
                            {{ project.isSuccess ? 'Oui' : 'Non' }}
                        </span>
                    </td>
                    <td>
                        <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="11" class="text-muted text-center">Pas de projet en cours</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_project_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Créer un nouveau projet
        </a>
    </div>
</div>

{% endblock %}
