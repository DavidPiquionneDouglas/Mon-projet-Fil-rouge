{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des utilisateurs</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Email</th>
                    <th>Matricule</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Date de naissance</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            {% if user.photo %}
                                <img src="{{ 'assets/image/user/' ~ user.photo }}" alt="Photo de {{ user.firstname }}" class="img-thumbnail" style="max-width: 100px;">
                            {% else %}
                                <span class="text-muted">Aucune photo</span>
                            {% endif %}
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.matricule }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.birthday ? user.birthday|date('d/m/Y') : 'Non renseignée' }}</td>
                        <td>{{ user.telephone }}</td>
                        <td>
                            <a href="{{ path('app_user_show', { 'id': user.id }) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_user_edit', { 'id': user.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_user_new') }}" class="btn btn-success">Créer un nouvel utilisateur</a>
    </div>
{% endblock %}