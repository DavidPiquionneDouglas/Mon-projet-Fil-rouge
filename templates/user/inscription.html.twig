{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-3 mb-5 bg-body rounded">
                <div class="card-body">
                    <h3 class="card-title text-center text-primary mb-4">Inscription</h3>

                    {% if form.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3 form-group">
                        {{ form_label(form.email, 'Identifiant') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control shadow-sm'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.firstName, 'Prénom') }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.lastName, 'Nom') }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.matricule, 'Matricule') }}
                        {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.matricule) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.telephone, 'Téléphone') }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.telephone) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.birthday, 'Date de naissance') }}
                        {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.birthday) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.photo, 'Photo de profil') }}
                        {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.photo) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.service, 'Service') }}
                        {{ form_widget(form.service, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.service) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.speciality, 'Spécialité') }}
                        {{ form_widget(form.speciality, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.speciality) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.password, 'Mot de passe (8 car. min.)') }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control shadow-sm', 'minlength': 8}}) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <div class="mb-3 form-group">
                        {{ form_label(form.confirmPassword, 'Confirmer le mot de passe') }}
                        {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control shadow-sm'}}) }}
                        {{ form_errors(form.confirmPassword) }}
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">S'inscrire</button>
                    {{ form_end(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
