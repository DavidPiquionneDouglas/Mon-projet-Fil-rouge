{% extends 'base.html.twig' %}

{% block body %}
<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-3 mb-5 bg-body rounded">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Inscription</h1>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.email, 'Identifiant', {'class': 'form-label'}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password, 'Mot de passe (8 car. min.)', {'class': 'form-label'}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.confirmPassword, 'Confirmer le mot de passe', {'class': 'form-label'}) }}
                            {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.confirmPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.photo, 'Photo de profil', {'class': 'form-label'}) }}
                            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.photo) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</main>

<footer class="bg-dark text-white text-center py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2><a href="{{ path('politique_confidentialite') }}" class="text-white text-decoration-none">Politique de Confidentialit√©</a></h2>
            </div>
            <div class="col-md-6">
                <h2><a href="#" class="text-white text-decoration-none">FAQ</a></h2>
            </div>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="{{ asset('assets/js/inscription.js') }}"></script>
{% endblock %}
